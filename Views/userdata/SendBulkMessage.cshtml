<div class="main-container" id="container">
    <div class="overlay"></div>
    <div class="search-overlay"></div>


    <!--  END TOPBAR  -->
    <!--  BEGIN CONTENT PART  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">



            <div class="row layout-top-spacing">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">
                         @ViewBag.Message
                    </div>
                }
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-success">
                        <span class="text-danger fw-bold ">Message Not Sent!</span> @ViewBag.ErrorMessage
                    </div>
                    <a asp-action="SelectPackage" asp-controller="userdata" asp-route-id="@User.FindFirst(ClaimTypes.Sid)?.Value" class="btn btn-primary">  Send Request</a>

                }
                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-6 col-12 layout-spacing">

                    <form asp-action="sendBulkMessage" method="post">
                        <div class="form-group">
                            <input name="reciverNumber" value="@ViewBag.ContactNumber"  class="form-control" />
                        </div>
                        <div class="form-group">
                            <input name="message" class="form-control" />
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--  END CONTENT PART  -->

</div>



